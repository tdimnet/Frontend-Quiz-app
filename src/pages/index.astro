---
import DefaultLayout from "../layouts/DefaultLayout.astro";
import SubjectLink from "../components/SubjectLink.astro";

import data from "../data.json";
const subjects = data.quizzes.map((quiz) => ({
  color: quiz.color,
  icon: quiz.icon,
  title: quiz.title,
}));
---

<DefaultLayout>
  <h1>Welcome to the Frontend Quiz</h1>
  <p>Pick a subject to get started</p>

  <nav>
    <ul class="subjects">
      {
        subjects.map((subject) => (
          <SubjectLink
            color={subject.color}
            content={subject.title}
            href={`/subjects/${subject.title.toLocaleLowerCase()}`}
            iconPath={subject.icon}
          />
        ))
      }
    </ul>
  </nav>
</DefaultLayout>

<style>
  .subjects {
    display: grid;
    gap: 0.75rem;
    list-style-type: none;
    padding-left: 0;
  }
</style>
