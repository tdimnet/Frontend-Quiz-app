---
import DefaultLayout from "../layouts/DefaultLayout.astro";
import SubjectLink from "../components/SubjectLink.astro";

import data from "../data.json";
const subjects = data.quizzes.map((quiz) => ({
  color: quiz.color,
  icon: quiz.icon,
  title: quiz.title,
}));
---

<DefaultLayout>
  <div class="wrapper">
    <div class="heading">
      <h1>
        Welcome to the
        <span> Frontend Quiz!</span>
      </h1>
      <p>Pick a subject to get started</p>
    </div>

    <nav>
      <ul class="subjects">
        {
          subjects.map((subject) => (
            <SubjectLink
              color={subject.color}
              content={subject.title}
              href={`/subjects/${subject.title.toLocaleLowerCase()}`}
              iconPath={subject.icon}
            />
          ))
        }
      </ul>
    </nav>
  </div>
</DefaultLayout>

<style>
  .wrapper {
    @media screen and (min-width: 1024px) {
      display: flex;
      min-height: 80vh;
      align-items: baseline;
    }
  }

  .heading {
    margin-bottom: 2.5rem;
    
    @media screen and (min-width: 1024px) {
      width: 50%;
    }
  }

  h1 {
    font-size: 2.5rem;
    font-weight: 300;
    margin-top: 0;
    margin-bottom: 1rem;

    span {
      font-weight: 500;
    }

    @media screen and (min-width: 768px) {
      display: flex;
      flex-direction: column;
      font-size: 4rem;
    }
  }

  p {
    margin: 0;
    font-style: italic;
    font-family: 0.875rem;
    font-weight: 300;
  }

  nav {
    @media screen and (min-width: 1024px) {
      width: 50%;
    }
  }

  .subjects {
    display: grid;
    gap: 0.75rem;
    list-style-type: none;
    padding-left: 0;

    @media screen and (min-width: 1024px) {
      gap: 1.5rem;
    }
  }
</style>
