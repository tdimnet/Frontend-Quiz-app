---
interface Props {
    id: string
    label: string
}

const { id, label } = Astro.props
---

<button id={id}>
    {
        label
    }
</button>

<style>
    button {
        background-color: #A729F5;
        color: white;
        transition: .4s;
        outline: none;
        border: none;
        width: 100%;
        padding-top: 18px;
        padding-bottom: 18px;
        cursor: pointer;
        border-radius: 12px;

        &:hover {
            color: #A729F5;
            background-color: white;
            border: 1px solid #A729F5;
        }
    }
</style>
