---
interface Props {
    id: string
    label: string
}

const { id, label } = Astro.props
---

<button id={id}>
    {
        label
    }
</button>

<style>
    button {
        background-color: #A729F5;
        border-radius: 12px;
        border: none;
        color: white;
        cursor: pointer;
        font-size: 1.125rem;
        font-weight: 500;
        outline: none;
        padding-bottom: 18px;
        padding-top: 18px;
        transition: .4s;
        width: 100%;

        &:hover {
            background-color: white;
            border: 1px solid #A729F5;
            color: #A729F5;
        }
    }
</style>
