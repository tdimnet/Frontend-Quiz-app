---
interface Props {
  color: string;
  content: string;
  href: string;
  iconPath: string;
}

import SubjectIcon from "./SubjectIcon.astro"

const { color, content, href, iconPath } = Astro.props;
---

<li>
  <a href={href}>
    <SubjectIcon
      color={color}
      iconPath={iconPath}
    />
    {content}
  </a>
</li>

<style define:vars={{ color }}>
  a {
    align-items: center;
    background-color: #FFF;
    color: #313e51;
    display: flex;
    padding: .75rem;
    text-decoration: none;
  }
</style>
