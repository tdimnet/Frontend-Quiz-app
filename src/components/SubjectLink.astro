---
interface Props {
  color: string;
  content: string;
  href: string;
  iconPath: string;
}

const { color, content, href, iconPath } = Astro.props;
---

<li>
  <a href={href}>
    <span>
        <img src={ iconPath } alt="" />
    </span>
    {content}
  </a>
</li>

<style define:vars={{ color }}>
  a {
    align-items: center;
    background-color: #FFF;
    color: #313e51;
    display: flex;
    padding: .75rem;
    text-decoration: none;
  }

  span {
    align-items: center;
    background-color: var(--color);
    display: flex;
    height: 40px;
    justify-content: center;
    margin-right: 1rem;
    width: 40px;
  }
</style>
